<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6A329"
    tools:context=".taikhoancanhan.IncomeingInvitationActivity">

    <ImageView
        android:id="@+id/imgMeetingType"
        android:layout_marginTop="@dimen/_50sdp"
        android:contentDescription="App name"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/textIncomingMeetingInvition"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_4sdp"
        android:gravity="center"
        android:text="Cuộc gọi đến "
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imgMeetingType"
        android:includeFontPadding="false"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textFirstChar"
            android:background="@drawable/background_meeting_invitation_user_icon"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_30ssp"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"/>
        <TextView
            android:id="@+id/textUsername"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textEmail"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageAcceptInvitation"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/background_accept_invitation"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/round_done_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/white" />
    <ImageView
        android:id="@+id/imageRejectInvition"
        android:layout_marginEnd="@dimen/_60sdp"
        android:background="@drawable/backgroud_reject_invitation"
        android:src="@drawable/round_close_24"
        android:padding="@dimen/_8sdp"
        android:layout_marginBottom="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>