<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    tools:context=".taikhoancanhan.CreateNoticeActivity">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:id="@+id/close"
               android:src="@drawable/baseline_close_24"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:tint="@color/black" />
           <TextView
               android:id="@+id/tv"
               android:textStyle="bold"
               android:textSize="@dimen/_17ssp"
               android:textColor="@color/black"
               android:text="Tạo thông báo"
               android:gravity="center"
               android:layout_marginLeft="@dimen/_90sdp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <Button
               android:id="@+id/button_tao"
               android:layout_marginLeft="@dimen/_20sdp"
               android:layout_toEndOf="@id/tv"
               android:layout_width="wrap_content"
               android:text="Tạo"
               android:layout_marginTop="-8dp"
               android:layout_height="40dp"/>
           <TextView
               android:textSize="@dimen/_14ssp"
               android:id="@+id/tv_chonngay"
               android:layout_marginTop="@dimen/_10sdp"
               android:text="Chọn ngày/tháng/năm:"
               android:textColor="@color/black"
               android:layout_below="@id/tv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <DatePicker
               android:id="@+id/date_picker"
               android:layout_marginTop="@dimen/_10sdp"
               android:layout_below="@id/tv_chonngay"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/tv_time"
               android:layout_below="@id/date_picker"
               android:layout_marginTop="@dimen/_10sdp"
               android:textSize="@dimen/_14ssp"
               android:textColor="@color/black"
               android:text="Chọn giờ:"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <TimePicker
               android:id="@+id/time_picker"
               android:layout_below="@id/tv_time"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/tv_nd"
               android:layout_below="@id/time_picker"
               android:layout_marginTop="@dimen/_10sdp"
               android:textSize="@dimen/_14ssp"
               android:textColor="@color/black"
               android:text="Nội dung:"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <EditText
               android:id="@+id/edit_nhapnd"
               android:layout_below="@id/tv_nd"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </RelativeLayout>
   </ScrollView>

</RelativeLayout>