<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".chitieu.DashBoardFragment">

    <androidx.cardview.widget.CardView
        app:cardElevation="@dimen/_5sdp"
        android:elevation="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="@dimen/_47sdp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Tiền thu"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:textSize="@dimen/_16ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/income_set_result"
                        android:text="0"
                        android:layout_gravity="center"
                        android:textColor="#2196F3"
                        android:textSize="@dimen/_14ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="@dimen/_97sdp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Tiền chi"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        android:textSize="@dimen/_16ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/expense_set_result"
                        android:text="0"
                        android:textColor="#F44336"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Số tiền còn dư"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/dash_money_du"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:textStyle="bold"
                    android:text="0"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/note_dash"
                android:text="mvmnbmn"
                android:textColor="@color/black"
                android:gravity="center"
                android:visibility="invisible"
                android:background="#F4E0E0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/_16ssp"
                    android:text="Thu nhập:"
                    android:padding="@dimen/_10sdp"
                    android:textAppearance="?android:textAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_income"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/_16ssp"
                    android:text="Thu chi:"
                    android:padding="@dimen/_10sdp"
                    android:textAppearance="?android:textAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_expense"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_160sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/expense_ft_text"
                android:text="Tiền chi"
                android:padding="@dimen/_5sdp"
                android:background="#FFC107"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/expense_Ft_btn"
                android:backgroundTint="#FFC107"
                android:layout_gravity="bottom|end"
                android:layout_width="wrap_content"
                android:elevation="@dimen/_6sdp"
                app:fabSize="mini"
                android:visibility="invisible"
                android:src="@drawable/baseline_horizontal_rule_24"
                app:pressedTranslationZ="@dimen/_12sdp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_90sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/income_ft_text"
                android:text="Tiền thu"
                android:textColor="#FFFFFF"
                android:padding="@dimen/_5sdp"
                android:background="#FFC107"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:visibility="invisible"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/income_Ft_btn"
                android:layout_gravity="bottom|end"
                android:backgroundTint="#FFC107"
                android:elevation="@dimen/_6sdp"
                app:fabSize="mini"
                android:src="@drawable/baseline_add_24"
                android:visibility="invisible"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fb_main_plus_btn"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:backgroundTint="#FFC107"
            android:src="@drawable/baseline_add_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>
