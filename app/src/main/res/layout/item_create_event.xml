<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6E6E6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dscs"
        android:text="dfbfbcvbvc"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
     android:id="@+id/vcv"
     android:layout_below="@+id/dscs"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/liner"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"

         android:layout_centerHorizontal="true"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginBottom="10dp"
         android:orientation="horizontal">
         <com.makeramen.roundedimageview.RoundedImageView
             android:id="@+id/imgProfile"
             android:layout_width="@dimen/_30sdp"
             android:layout_height="@dimen/_30sdp"
             android:layout_marginStart="@dimen/_16sdp"
             android:layout_marginLeft="@dimen/_16sdp"
             android:layout_marginTop="@dimen/_12sdp"
             android:background="@drawable/backgroud_icon"
             android:scaleType="centerCrop"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:riv_corner_radius="@dimen/_8sdp" />

         <TextView
             android:id="@+id/textName"
             android:layout_width="0dp"
             android:text="bdsbas"
             android:layout_height="wrap_content"
             android:layout_marginStart="@dimen/_8sdp"
             android:layout_marginEnd="@dimen/_30sdp"
             android:ellipsize="end"
             android:maxLines="1"
             android:textColor="@color/black"
             android:textSize="@dimen/_13ssp"
             android:textStyle="bold"
             app:layout_constraintBottom_toBottomOf="@id/imgProfile"
             app:layout_constraintStart_toEndOf="@id/imgProfile"
             app:layout_constraintTop_toTopOf="@id/imgProfile" />
         <TextView
             android:id="@+id/textTimeandDate"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginStart="16dp"
             android:ellipsize="end"
             android:maxLines="1"
             android:text="20/03/2000"
             android:textColor="#575757"
             android:textSize="@dimen/_9ssp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toEndOf="@id/imgProfile"
             app:layout_constraintTop_toBottomOf="@+id/textName"
             app:layout_constraintVertical_bias="0.0" />
         <TextView
             android:id="@+id/textDetail"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginStart="16dp"
             android:ellipsize="end"
             android:layout_marginTop="@dimen/_5sdp"
             android:maxLines="1"
             android:text="bdsbasdfvbdfbv"
             android:textColor="#575757"
             android:textSize="@dimen/_11ssp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toEndOf="@id/imgProfile"
             app:layout_constraintTop_toBottomOf="@+id/textTimeandDate"
             app:layout_constraintVertical_bias="0.0" />
         <TextView
             android:id="@+id/textghichu"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginStart="16dp"
             android:ellipsize="end"
             android:layout_marginTop="@dimen/_5sdp"
             android:maxLines="1"
             android:visibility="gone"
             android:textColor="#575757"
             android:textSize="@dimen/_11ssp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toEndOf="@id/imgProfile"
             app:layout_constraintTop_toBottomOf="@+id/textTimeandDate"
             app:layout_constraintVertical_bias="0.0" />

         <ImageView
             android:id="@+id/close"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/baseline_close_243"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:tint="@color/black" />
     </androidx.constraintlayout.widget.ConstraintLayout>

     <TextView
         android:id="@+id/tv_thamgia"
         android:layout_marginLeft="@dimen/_60sdp"
         android:layout_below="@+id/liner"
         android:text="Tham gia "
         android:textColor="@color/black"
         android:background="#A2FF36"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <TextView
         android:id="@+id/tv_khongthamgia"
         android:text="Không tham gia "
         android:textColor="@color/black"
         android:background="#F44336"
         android:layout_marginLeft="@dimen/_16sdp"
         android:layout_below="@+id/liner"
         android:layout_toRightOf="@+id/tv_thamgia"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <TextView
         android:id="@+id/tv_cancle"
         android:text="Hủy"
         android:textColor="@color/black"
         android:background="#B1B1B1"
         android:layout_marginLeft="@dimen/_16sdp"
         android:layout_below="@+id/liner"
         android:layout_toRightOf="@+id/tv_khongthamgia"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <TextView
         android:id="@+id/tv_tt"
         android:layout_marginLeft="@dimen/_60sdp"
         android:layout_below="@+id/liner"
         android:text="Tham gia "
         android:textColor="#A5A5A5"
         android:visibility="invisible"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <TextView
         android:id="@+id/tv_kott"
         android:text="Không tham gia "
         android:textColor="#A5A5A5"
         android:visibility="invisible"
         android:layout_marginLeft="@dimen/_16sdp"
         android:layout_below="@+id/liner"
         android:layout_toRightOf="@+id/tv_thamgia"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
 </RelativeLayout>

</RelativeLayout>