<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/backgroud_icon"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/_8sdp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgSignOut"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:background="@drawable/backgroud_icon"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/baseline_close_24"
            android:tint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="0dp"
            android:text="bdsbas"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imgProfile"
            app:layout_constraintEnd_toEndOf="@id/imgSignOut"
            app:layout_constraintStart_toEndOf="@id/imgProfile"
            app:layout_constraintTop_toTopOf="@id/imgProfile" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/_20sdp"
            android:maxLines="1"
            android:text="dsbsdbsdb"
            android:textColor="#B3B1B1"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/textName"
            app:layout_constraintEnd_toEndOf="@id/textName"
            app:layout_constraintStart_toStartOf="@id/textName"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_mota"
        android:text="hjvjhv,kjbkjnl.knl.n"
        android:layout_below="@id/liner"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/li"
        android:orientation="vertical"
        android:layout_below="@id/tv_mota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_imag"
            android:layout_gravity="center_horizontal"

            android:layout_width="wrap_content"
            android:layout_height="300dp"
            />

        <VideoView
            android:id="@+id/iv_video"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitCenter" />
    </LinearLayout>



    <LinearLayout
       android:id="@+id/linear_soluotlike"
       android:layout_below="@id/li"
       android:orientation="horizontal"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="@dimen/_10sdp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:background="@drawable/baseline_heart_broken_24"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <ImageView
           android:background="@drawable/baseline_emoji_emotions_24"
           android:backgroundTint="#2196F3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <TextView
           android:id="@+id/tv_soluotlike"
           android:textSize="@dimen/_13ssp"
           android:text="59"
           android:layout_width="wrap_content"
           android:layout_height="30dp"/>
   </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_below="@id/linear_soluotlike"
        android:layout_width="match_parent"
        android:background="#D8D0D0"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/lear_like"
        android:layout_below="@id/view1"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_like"
            android:layout_width="28dp"
            android:backgroundTint="@color/custom_color"
            android:layout_height="28dp"
            android:background="@drawable/baseline_emoji_emotions_24"/>
        <TextView
            android:id="@+id/tv_like"
            android:text="Thích"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_3sdp"
            android:backgroundTint="@color/custom_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/image_comment"
            android:layout_width="28dp"
            android:layout_marginLeft="90dp"
            android:backgroundTint="@color/custom_color"
            android:layout_height="28dp"
            android:background="@drawable/baseline_comment_bank_24"/>
        <TextView
            android:text="Bình luận"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_1sdp"
            android:backgroundTint="@color/custom_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/image_sent"
            android:layout_width="28dp"
            android:layout_marginLeft="70dp"
            android:backgroundTint="@color/custom_color"
            android:layout_height="28dp"
            android:background="@drawable/baseline_send_24"/>
        <TextView
            android:text="Gửi"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_3sdp"
            android:textSize="@dimen/_13ssp"
            android:backgroundTint="@color/custom_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_below="@id/lear_like"
        android:layout_width="match_parent"
        android:background="#D8D0D0"
        android:layout_height="10dp"/>
</RelativeLayout>