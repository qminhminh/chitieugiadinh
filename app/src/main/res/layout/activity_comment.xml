<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_150sdp"
    android:layout_height="500dp"
    tools:context=".taikhoancanhan.CommentActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcyc_comment"
        android:layout_width="match_parent"
        android:layout_height="626dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    <View
        android:id="@+id/view1"
        android:layout_below="@id/rcyc_comment"
        android:layout_width="match_parent"
        android:background="#D8D0D0"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_height="1dp"/>

    <EditText
        android:id="@+id/tv_comment"
        android:layout_width="358dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/img_send"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:hint="Viết bình luận..."
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColorHint="#464646"
        android:textSize="@dimen/_13ssp" />

    <ImageView
        android:id="@+id/img_send"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/view1"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-47dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/seline_send_24" />
</RelativeLayout>